    <tabs>
        <Tab fx:id="tabReserve" style="-fx-background-color: #cadff1;" text="Reserve Flight">
            <content>
                <VBox fx:id="vboxReserve" prefHeight="407.0" prefWidth="600.0" spacing="20" style="-fx-padding: 20;">
                    <Pane fx:id="paneWelcome" prefHeight="60.0" prefWidth="560.0">
