                                <font>
                                    <Font name="Elephant" size="31.0" />
                                </font>
                            </Text>
                        </children>
                    </Pane>
                    <Pane prefHeight="323.0" prefWidth="663.0">
                        <children>
                            <Button fx:id="btnMakeReservation" layoutX="155.0" layoutY="109.0" onAction="#makeReservation" prefHeight="25.0" prefWidth="125.0" style="-fx-background-color: #ccd3d8;" text="Make Reservation:" />
                            <Button fx:id="btnSearchFlights" layoutX="14.0" layoutY="109.0" onAction="#searchFlights" prefHeight="25.0" prefWidth="112.0" style="-fx-background-color: #ccd3d8;" text="Search flight:" />

                            <Text layoutX="24.0" layoutY="42.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Origin airport:">
                                <font>
                                    <Font size="15.0" />
                                </font>
                            </Text>
                            <ComboBox fx:id="comboOrigin" layoutX="168.0" layoutY="24.0" prefWidth="150.0" />

                            <Text layoutX="14.0" layoutY="80.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Destination airport:">
                                <font>
                                    <Font size="15.0" />
                                </font>
                            </Text>
                            <ComboBox fx:id="comboDestination" layoutX="168.0" layoutY="71.0" prefWidth="150.0" />

                            <TableView fx:id="tablePasajerosAsignados" layoutX="21.0" layoutY="177.0" prefHeight="122.0" prefWidth="594.0">
                                <columns>
                                    <TableColumn prefWidth="75.0" text="ID" />
                                    <TableColumn prefWidth="93.0" text="Name" />
                                    <TableColumn prefWidth="136.0" text="Nationality" />
                                    <TableColumn prefWidth="181.0" text="Flight-History" />
                                    <TableColumn prefWidth="108.0" text="State" />
                                </columns>
                            </TableView>

                            <Text layoutX="175.0" layoutY="171.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Information of your flight">
                                <font>
                                    <Font name="System Bold" size="20.0" />
                                </font>
                            </Text>
                        </children>
                    </Pane>
                </VBox>
            </content>
            <graphic>
                <Pane fx:id="paneGraphicReserve" prefHeight="50" />
            </graphic>
        </Tab>



        <Tab fx:id="tabLogout" text="Log Out">
            <content>
                <VBox fx:id="vboxLogout" alignment="CENTER" spacing="20" style="-fx-padding: 30;">
                    <Pane fx:id="paneLogoutMessage" prefHeight="115.0" prefWidth="547.0">
