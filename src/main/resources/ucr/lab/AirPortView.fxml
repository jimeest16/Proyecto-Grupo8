<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ucr.lab.controller.AirPortController">
   <children>
      <!-- Header -->
      <Pane prefHeight="80.0" prefWidth="800.0" style="-fx-background-color: #e1e4e7;">
         <children>
            <Label layoutX="241.0" layoutY="33.0" text="AirPort Manager✈" textFill="#546f9e">
               <font>
                  <Font name="Elephant" size="37.0" />
               </font>
            </Label>
            <Text layoutX="233.0" layoutY="35.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Give the passengers the best experience!">
               <font>
                  <Font name="System Bold" size="19.0" />
               </font>
            </Text>
         </children>
      </Pane>

      <!-- Table -->
      <TableView fx:id="tvAirports" layoutX="30.0" layoutY="410.0" prefHeight="160.0" prefWidth="740.0">
         <columns>
            <TableColumn fx:id="cID" prefWidth="70.0" text="ID" />
            <TableColumn fx:id="cNombre" prefWidth="130.0" text="Nombre" />
            <TableColumn fx:id="cPais" prefWidth="90.0" text="País" />
            <TableColumn fx:id="cEstado" prefWidth="130.0" text="Estado" />
            <TableColumn fx:id="cRegistro" prefWidth="200.0" text="Registro de salidas" />
         </columns>
      </TableView>

      <Label layoutX="30.0" layoutY="380.0" text="Register" textFill="#5d5f86">
         <font>
            <Font name="Elephant" size="18.0" />
         </font>
      </Label>

      <!-- RadioButtons -->
      <RadioButton fx:id="rbActivos" layoutX="600.0" layoutY="380.0" text="Activos" />
      <RadioButton fx:id="rbInactivos" layoutX="680.0" layoutY="380.0" text="Inactivos" />

      <!-- Form -->
      <Pane layoutX="0.0" layoutY="80.0" prefHeight="290.0" prefWidth="800.0" style="-fx-background-color: #effaff;">
         <children>
            <Label layoutX="160.0" layoutY="20.0" text="ID Aeropuerto:" />
            <TextField fx:id="tfID" layoutX="300.0" layoutY="16.0" prefWidth="260.0" />

            <Label layoutX="160.0" layoutY="55.0" text="Nombre:" />
            <TextField fx:id="tfNombre" layoutX="300.0" layoutY="51.0" prefWidth="260.0" />

            <Label layoutX="160.0" layoutY="90.0" text="País:" />
            <TextField fx:id="tfPais" layoutX="300.0" layoutY="86.0" prefWidth="260.0" />

            <Label layoutX="160.0" layoutY="125.0" text="Estado:" />
            <ComboBox fx:id="mEstado" layoutX="300.0" layoutY="121.0" prefWidth="260.0" />

            <Label layoutX="160.0" layoutY="160.0" text="Registro de salidas:" />
            <ComboBox fx:id="mSalidas" layoutX="300.0" layoutY="156.0" prefWidth="260.0" />

            <Button fx:id="btCrear" layoutX="320.0" layoutY="210.0" onAction="#createAirport" prefWidth="120.0" style="-fx-background-color: #6fa2d5;" text="Crear">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
         </children>
      </Pane>
   </children>
</AnchorPane>
