<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ucr.lab.controller.AirPortController">
   <children>
      <!-- Header -->
      <Pane prefHeight="80.0" prefWidth="800.0" style="-fx-background-color: #4770ac;">
         <children>
            <Label layoutX="240.0" layoutY="20.0" text="Aeropuertos Manager" textFill="WHITE">
               <font>
                  <Font name="Elephant" size="28.0" />
               </font>
            </Label>
         </children>
      </Pane>

      <!-- Table -->
      <TableView fx:id="tvAirports" layoutX="30.0" layoutY="410.0" prefHeight="160.0" prefWidth="740.0">
         <columns>
            <TableColumn fx:id="cID" text="ID" prefWidth="70.0"/>
            <TableColumn fx:id="cNombre" text="Nombre" prefWidth="130.0"/>
            <TableColumn fx:id="cPais" text="País" prefWidth="90.0"/>
            <TableColumn fx:id="cEstado" text="Estado" prefWidth="130.0"/>
            <TableColumn fx:id="cRegistro" text="Registro de salidas" prefWidth="200.0"/>
         </columns>
      </TableView>

      <Label layoutX="30.0" layoutY="380.0" text="Registro Aeropuertos" textFill="#5d5f86">
         <font>
            <Font size="18.0" />
         </font>
      </Label>

      <!-- RadioButtons -->
      <RadioButton fx:id="rbActivos" layoutX="600.0" layoutY="380.0" text="Activos"/>
      <RadioButton fx:id="rbInactivos" layoutX="680.0" layoutY="380.0" text="Inactivos"/>

      <!-- Form -->
      <Pane layoutX="0.0" layoutY="80.0" prefHeight="290.0" prefWidth="800.0" style="-fx-background-color: #effaff;">
         <children>
            <Label layoutX="160.0" layoutY="20.0" text="ID Aeropuerto:"/>
            <TextField fx:id="tfID" layoutX="300.0" layoutY="16.0" prefWidth="260.0"/>

            <Label layoutX="160.0" layoutY="55.0" text="Nombre:"/>
            <TextField fx:id="tfNombre" layoutX="300.0" layoutY="51.0" prefWidth="260.0"/>

            <Label layoutX="160.0" layoutY="90.0" text="País:"/>
            <TextField fx:id="tfPais" layoutX="300.0" layoutY="86.0" prefWidth="260.0"/>

            <Label layoutX="160.0" layoutY="125.0" text="Estado:"/>
            <ComboBox fx:id="mEstado" layoutX="300.0" layoutY="121.0" prefWidth="260.0"/>

            <Label layoutX="160.0" layoutY="160.0" text="Registro de salidas:"/>
            <ComboBox fx:id="mSalidas" layoutX="300.0" layoutY="156.0" prefWidth="260.0"/>

            <Button fx:id="btCrear" layoutX="320.0" layoutY="210.0" text="Crear" onAction="#createAirport" prefWidth="120.0" style="-fx-background-color: #6fa2d5;">
               <font>
                  <Font size="16.0"/>
               </font>
            </Button>
         </children>
      </Pane>
   </children>
</AnchorPane>
