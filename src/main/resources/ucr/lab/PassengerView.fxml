<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ucr.lab.controller.passengerController"
            prefHeight="400.0" prefWidth="600.0">

        <children>
            <!-- Encabezado -->
            <Pane layoutX="0.0" layoutY="0.0" prefHeight="72.0" prefWidth="600.0">
                <children>
                    <Text fill="#548bc1" layoutX="168.0" layoutY="44.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Manage user information">
                        <font>
                            <Font name="Elephant" size="31.0" />
                        </font>
                    </Text>
                    <Pane layoutX="-95.0" layoutY="31.0" prefHeight="77.0" prefWidth="669.0">
                        <children>
                            <Pane layoutX="118.0" layoutY="69.0" prefHeight="75.0" prefWidth="446.0" />
                            <Text layoutX="396.0" layoutY="34.0" strokeType="OUTSIDE" strokeWidth="0.0" text="the best way!">
                                <font>
                                    <Font name="Elephant" size="21.0" />
                                </font>
                            </Text>
                        </children>
                    </Pane>
                </children>
            </Pane>

            <!-- Panel principal -->
            <Pane layoutY="72.0" prefHeight="478.0" prefWidth="811.0">
                <children>
                    <Button layoutX="229.0" layoutY="34.0" onAction="#deleteUser" prefHeight="25.0" prefWidth="114.0" style="-fx-background-color: #d4d9dd;" text="Eliminar Pasajero" />
                    <Button layoutX="24.0" layoutY="34.0" onAction="#editUser" prefHeight="25.0" prefWidth="124.0" style="-fx-background-color: #d4d9dd;" text="Modificar Pasajero" />
                    <Button layoutX="427.0" layoutY="28.0" onAction="#addUser" prefHeight="25.0" prefWidth="124.0" style="-fx-background-color: #d4d9dd;" text="Agregar Pasajero" />
                    <ImageView fitHeight="40.0" fitWidth="40.0" layoutX="59.0" layoutY="-6.0">
                        <image>
                            <Image url="@editar.png" />
                        </image>
                    </ImageView>
                    <ImageView fitHeight="40.0" fitWidth="40.0" layoutX="266.0" layoutY="-6.0">
                        <image>
                            <Image url="@eliminarUsuario.png" />
                        </image>
                    </ImageView>
                    <ImageView fitHeight="40.0" fitWidth="40.0" layoutX="469.0" layoutY="-11.0">
                        <image>
                            <Image url="@user.png" />
                        </image>
                    </ImageView>
                    <Button layoutX="633.0" layoutY="34.0" onAction="#handleSearchPassenger" style="-fx-background-color: #d4d9dd;" text="Buscar pasajero" />
                    <ImageView fitHeight="45.0" fitWidth="64.0" layoutX="650.0" layoutY="-14.0">
                        <image>
                            <Image url="@buscador.png" />
                        </image>
                    </ImageView>

                    <!-- Formulario -->
                    <Pane layoutX="13.0" layoutY="59.0" prefHeight="413.0" prefWidth="799.0">
                        <children>
                            <Label layoutX="41.0" layoutY="17.0" text="ID:" />
                            <TextField fx:id="txtId" layoutX="158.0" layoutY="13.0" promptText="ID del pasajero" />
                            <Label layoutX="40.0" layoutY="45.0" text="Nombre:" />
                            <TextField fx:id="txtName" layoutX="158.0" layoutY="41.0" promptText="Nombre del pasajero" />
                            <Label layoutX="39.0" layoutY="81.0" text="Nacionalidad:" />
                            <TextField fx:id="txtNationality" layoutX="158.0" layoutY="77.0" prefHeight="25.0" prefWidth="148.0" promptText="Nacionalidad del pasajero" />
                            <Label layoutX="25.0" layoutY="120.0" text="Historial de vuelos:" />
                            <TextField fx:id="txtHistory" layoutX="158.0" layoutY="116.0" promptText="Historial (opcional)" />
                            <Button layoutX="25.0" layoutY="150.0" onAction="#handleListPassengers" style="-fx-background-color: #82baf3;" text="Listar todos" textFill="#fff9f9" />
                            <TextArea fx:id="txtOutput" layoutX="25.0" layoutY="182.0" prefHeight="207.0" prefRowCount="10" prefWidth="689.0" wrapText="true" />
                        </children>
                    </Pane>
                </children>
            </Pane>
        </children>
    </AnchorPane>